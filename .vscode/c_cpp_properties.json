{
    "configurations": [
        {
            "name": "Firmware Bootloader + Firmware Application",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/libopencm3/include",
                "${workspaceFolder}/shared"
            ],
            "defines": [
                "STM32L0",
                "STM32L053R8"
            ],
            "compilerPath": "/opt/homebrew/bin/arm-none-eabi-gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-arm"
        },
        {
            "name": "Firmware Programmer",
            "includePath": [
                "${workspaceFolder}/firmware-programmer/include"
            ],
            "defines": [
                "DESKTOP_BUILD"
            ],
            "compilerPath": "/Library/Developer/CommandLineTools/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-gcc-arm64"
        }
    ],
    "version": 4
}
