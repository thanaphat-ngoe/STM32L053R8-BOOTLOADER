{
	"configurations": [
		{
			"name": "Cortex Debug",
			"cwd": "${workspaceFolder}",
			"executable": "${workspaceFolder}/firmware_application/firmware_application.elf",
			"request": "launch",
			"type": "cortex-debug",
			"runToEntryPoint": "main",
			"device": "stm32l0",
			"servertype": "openocd",
			"serverpath": "/opt/homebrew/bin/openocd",
			"gdbPath": "/opt/homebrew/bin/gdb",
            "configFiles": [
                "/opt/homebrew/share/openocd/scripts/interface/stlink.cfg",
                "/opt/homebrew/share/openocd/scripts/target/stm32l0.cfg"
            ],
			"preLaunchCommands": [
				"monitor program ${workspaceFolder}/firmware_application/firmware_application.elf verify reset"
			],
			"internalConsoleOptions": "neverOpen",
		}
	],
}
